%p#notice= notice
%h1 Ingredients
%table.table
  %thead
    %tr
      %th Name
      %th Carbohydrates
      %th Fat
      %th Protein
      %th{:colspan => "3"}
  %tbody
    - @ingredients.each do |ingredient|
      %tr
        %td= ingredient.name
        %td= ingredient.carbohydrates
        %td= ingredient.fat
        %td= ingredient.protein
        %td= link_to 'Show', ingredient, class: 'btn btn-primary'
        %td= link_to 'Edit', edit_ingredient_path(ingredient), class: 'btn btn-info'
        %td= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
%br/
= link_to 'New Ingredient', new_ingredient_path, class: 'btn btn-default'
