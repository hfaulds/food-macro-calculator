= form_for @day_plan do |f|
  - if @day_plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@day_plan.errors.count, "error")} prohibited this day_plan from being saved:"
      %ul
        - @day_plan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
