= form_for(@ingredient) do |f|
  - if @ingredient.errors.any?
    #error_explanation
      %h2
        = pluralize(@ingredient.errors.count, "error")
        prohibited this ingredient from being saved:
      %ul
        - @ingredient.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :carbohydrates
    %br/
    = f.text_field :carbohydrates
  .field
    = f.label :fat
    %br/
    = f.text_field :fat
  .field
    = f.label :protein
    %br/
    = f.text_field :protein
  .actions
    = f.submit
